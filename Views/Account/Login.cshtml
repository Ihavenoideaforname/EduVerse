@model LoginViewModel
@{
    ViewData["Title"] = "Sign In";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-action="Login" method="post">
                <hr />
                <div class="form-floating mb-3">
                    <input asp-for="UserIdentifier" class="form-control" autocomplete="useridentifier" aria-required="true" placeholder="Enter your username or email" />
                    <label asp-for="UserIdentifier" class="form-label">User Identifier</label>
                    <span asp-validation-for="UserIdentifier" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                    <label asp-for="Password" class="form-label">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="d-flex justify-content-between gap-3">
                    <a class="w-50 btn btn-lg btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                    <button type="submit" class="w-50 btn btn-lg btn-primary">Sign In</button>
                </div>
            </form>
        </section>
    </div>
</div>
