@model List<UserListViewModel>
@{
    ViewData["Title"] = "Manage Users";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3 d-flex gap-2">
    <a asp-action="Create" class="btn btn-primary">Add New User</a>
</div>

<form method="get" class="mb-4">
    <div class="d-flex gap-2">
        <input type="text" name="SchoolId" value="@ViewBag.SchoolId" hidden />
        <input type="text" name="search" value="@Context.Request.Query["Search"]" class="form-control" placeholder="Search by name, surname or username..." />

        <select name="roleId" class="form-select">
            <option value="">All Roles</option>
            @foreach(var role in ViewBag.Roles)
            {
                @if(string.Equals(Context.Request.Query["Role"].ToString(), role, StringComparison.OrdinalIgnoreCase))
                {
                    <option value="@role" selected>@role</option>
                }
                else
                {
                    <option value="@role">@role</option>
                }
            }
        </select>

        <button class="btn btn-primary">Apply</button>
    </div>
</form>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Username</th>
            <th>School Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Surname</td>
                <td>@user.Username</td>
                <td>@user.SchoolRole</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">Details</a>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
