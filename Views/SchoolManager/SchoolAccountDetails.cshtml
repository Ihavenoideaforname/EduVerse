@model SchoolAccountViewModel

@{
    ViewData["Title"] = "School Account Details";
}

<h1>@ViewData["Title"]</h1>

<div class="card shadow-sm mt-4">
    <div class="card-body">

        <h4 class="mb-3">User Information</h4>

        <div class="row mb-4">
            <div class="col-md-4">
                <label class="fw-bold">Name</label>
                <div>@Model.Name</div>
            </div>

            <div class="col-md-4">
                <label class="fw-bold">Surname</label>
                <div>@Model.Surname</div>
            </div>

            <div class="col-md-4">
                <label class="fw-bold">Username</label>
                <div>@Model.Username</div>
            </div>
        </div>

        <h4 class="mb-3">Contact Information</h4>

        <div class="row mb-4">
            <div class="col-md-4">
                <label class="fw-bold">Email</label>
                <div>@Model.Email</div>
            </div>
        
            @if(Model.PhoneNumber != "")
            {
                <div class="col-md-4">
                    <label class="fw-bold">Phone Number</label>
                    <div>@Model.PhoneNumber</div>
                </div>
            }
        </div>

        <h4 class="mb-3">School Information</h4>

        <div class="row mb-4">
            <div class="col-md-6">
                <label class="fw-bold">School</label>
                <div>@Model.SchoolName</div>
            </div>

            <div class="col-md-6">
                <label class="fw-bold">Role</label>
                <div>@Model.RoleName</div>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="ManageAccounts" asp-route-SchoolId="@Model.SchoolId" class="btn btn-secondary">Go Back</a>
            <a asp-action="EditSchoolAccount" asp-route-SchoolId="@Model.SchoolId" asp-route-SchoolAccountId="@Model.SchoolAccountId" class="btn btn-primary">Edit</a>
            <a asp-action="DeleteSchoolAccount" asp-route-SchoolId="@Model.SchoolId" asp-route-SchoolAccountId="@Model.SchoolAccountId" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>